<!DOCTYPE html>
<html>
  <head>
    <title>PracticeBlog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <section class="hero is-link is-medium">
    <!-- Hero head: always at the top -->
      <div class="hero-head">
        <nav class="navbar">
          <div class="container">
            <div class="navbar-brand">
              <%= link_to 'Practice Blog', root_path, class: "navbar-item" %>
              <span class="navbar-burger burger" data-target="navbarMenuHeroA">
                <span><%= link_to "", new_post_path, class:"navbar-item" %></span>
                <span><%= link_to "", new_post_path, class:"navbar-item" %></span>
                <span><%= link_to "", new_post_path, class:"navbar-item" %></span>
              </span>
            </div>
            <div id="navbarMenuHeroA" class="navbar-menu">
              <div class="navbar-end">
                <%= link_to "Create New Post", new_post_path, class:"navbar-item" %>
              </div>
            </div>
          </div>
        </nav>
      </div>

      <!-- Hero content: always vertically centered -->
      <div class="hero-body">
        <div class="container has-text-centered">
          <h1 class="title">
            <%= yield :page_title %>
          </h1>
        </div>
      </div>
    </section>

    <%= yield %>

    <footer class="footer">
      <div class="content has-text-centered">
        <p>
          <strong>Practice Blog</strong> by <%= link_to "rom-30", "https://github.com/rom-30" %>
        </p>
      </div>
    </footer>
  </body>
</html>
