<div class="box">
  <article class="media">
    <div class="media-content">
      <div class="content">
        <p><strong><%= comment.author %></strong>
          <%= comment.body %>
        </p>
      </div>
    </div>

    <%= link_to "Delete", [comment.post, comment], method: :delete, class: "button is-danger", data: { confirm: "Please confirm!" }  %>
  </article>
</div>
