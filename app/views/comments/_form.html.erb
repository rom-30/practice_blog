<%= simple_form_for([@post, @post.comments.build]) do |f| %>
  <div class="field">
    <div class="control">
      <%= f.input :author, label: 'Name', input_html: { class: 'input'}, wrapper: false, label_html: {class: 'label'} %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :body, label: 'Type your comment below', input_html: { class: 'textarea'}, wrapper: false, label_html: {class: 'label'} %>
    </div>
  </div>
  <%= f.button :submit, 'Submit comment', class: "button is-link" %>
<% end %>

